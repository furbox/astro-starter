---
const navItems = [
  { href: '/', text: 'Inicio' },
  { href: '/nosotros', text: 'Nosotros' },
  { href: '/servicios', text: 'Servicios' },
  { href: '/contacto', text: 'Contacto' },
];

import { Picture } from 'astro:assets';
import icon from '../assets/letras-naranja.png';
---

<header class="w-full bg-white border-b border-gray-100">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-2xl font-bold text-primary">
        <Picture
          src={icon} 
          formats={['avif', 'webp']} 
          alt="Logo Social Business"
          height={50}
        />
      </a>
      
      <ul class="hidden md:flex space-x-8">
        {navItems.map(item => (
          <li>
            <a 
              href={item.href}
              class="text-gray-600 hover:text-primary transition-colors"
            >
              {item.text}
            </a>
          </li>
        ))}
        
        <li>
          <a 
            href="/login"
            class="text-primary hover:text-secondary transition-colors"
          >
            Iniciar Sesión
          </a>
        </li>
      </ul>
      
      <button 
        id="mobile-menu-button"
        class="md:hidden p-2"
        aria-label="Menu"
      >
        <svg 
          class="w-6 h-6" 
          fill="none" 
          stroke="#0F172A" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div 
      id="mobile-menu" 
      class="hidden md:hidden mt-4"
    >
      <ul class="flex flex-col space-y-4">
        {navItems.map(item => (
          <li>
            <a 
              href={item.href}
              class="block text-gray-600 hover:text-primary transition-colors"
            >
              {item.text}
            </a>
          </li>
        ))}
        <li>
          <a 
            href="/login"
            class="block text-primary hover:text-secondary transition-colors"
          >
            Iniciar Sesión
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>